<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.julienne.labexercise1.SecondActivity">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/RA_Label"
            android:layout_column="1"
            android:layout_marginTop="25dp"
            android:padding="25dip"
            android:textSize="20dp"
            android:text="Your RA is:"/>

        <TextView
            android:id="@+id/RA_Score"
            android:layout_column="1"
            android:padding="25dip"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/FinalGrade_Label"
            android:layout_column="1"
            android:padding="25dip"
            android:text="Your final grade is:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/FinalGrade_Score"
            android:layout_column="1"
            android:padding="25dip"
            android:textSize="20dp" />

    </TableRow>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_above="@+id/etName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="goBackToMain"/>

    <TextView
        android:text="Abucay, Julienne E. - 4ITB"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textSize="15dp"/>



</TableLayout>
